<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>
<div class="text-center">
<% (0...@post.images.count).each do |image|%>
  <%= image_tag(@post.thumbnail(image)) %>
<% end %> 
</div>
<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
